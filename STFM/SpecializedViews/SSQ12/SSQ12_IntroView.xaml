<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STFM.SpecializedViews.SSQ12.SSQ12_IntroView">

    <StackLayout>

        <Label x:Name="HeadingLabel"
               Text="Frågor om din förmåga att höra och lyssna i olika situationer (SSQ12)"
               FontSize="Header" 
               Margin="0,0,0,20">
        </Label>

        <Frame HeightRequest="4" Margin="0" BackgroundColor="#808080"></Frame>

        <Grid x:Name="MainGrid" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0"
               Grid.Column="0">

                <Label x:Name ="HA_UseLabel" Grid.Row="0" Text="Använder du hörapparat?" FontSize="Medium" Margin="0,10,0,20"></Label>
                <RadioButton  x:Name="HA_QuestionRadioButton1" Grid.Row="1" Content="Nej, jag använder inte hörappat" GroupName="Group1" Value="1" FontSize="Medium" CheckedChanged="HA_QuestionRadioButton1_CheckedChanged" />
                <RadioButton  x:Name="HA_QuestionRadioButton2" Grid.Row="2" Content="Ja, på vänster öra" GroupName="Group1" Value="2" FontSize="Medium" CheckedChanged="HA_QuestionRadioButton2_CheckedChanged" />
                <RadioButton  x:Name="HA_QuestionRadioButton3" Grid.Row="3" Content="Ja, på höger öra" GroupName="Group1" Value="3" FontSize="Medium" CheckedChanged="HA_QuestionRadioButton3_CheckedChanged"/>
                <RadioButton  x:Name="HA_QuestionRadioButton4" Grid.Row="4" Content="Ja, på båda öronen" GroupName="Group1" Value="4" FontSize="Medium" CheckedChanged="HA_QuestionRadioButton4_CheckedChanged"/>

            </StackLayout>

            <StackLayout x:Name="HaHistoryStackLayout" 
              IsVisible="False"
              Grid.Row="0"
               Grid.Column="1">

                <Label x:Name ="HA_TimeLabel" Text="Hur länge har du använt hörapparat?" FontSize="Medium" Margin="0,10,0,20"></Label>

                <Frame x:Name="HA_LeftFrame" IsVisible="Hidden" Margin="0,0,0,5">

                    <StackLayout >

                        <Label x:Name ="HA_LeftEarLabel" Text="Vänster öra:" FontSize="Medium"></Label>

                        <StackLayout Orientation="Horizontal" >
                            <Label x:Name ="HA_LeftTimeOptionLabel" Text="Ange som:" FontSize="Medium" Margin="8"></Label>
                            <RadioButton  x:Name="HA_Left_YearsMonth_RadioButton" Content="År och månader" GroupName="Group2" Value="1" FontSize="Medium" CheckedChanged="HA_Left_YearsMonth_RadioButton_CheckedChanged" />
                            <RadioButton  x:Name="HA_Left_Weeks_RadioButton" Content="Veckor" GroupName="Group2" Value="2" FontSize="Medium" CheckedChanged="HA_Left_Weeks_RadioButton_CheckedChanged" />
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">

                            <Picker x:Name="HA_Left_WeeksPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Left_WeeksLabel" Text="veckor" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                            <Picker x:Name="HA_Left_YearsPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Left_YearsLabel" Text="år" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                            <Picker x:Name="HA_Left_MonthsPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Left_MonthsLabel" Text="månader" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                        </StackLayout>

                    </StackLayout>

                </Frame>


                <Frame x:Name="HA_RightFrame" IsVisible="Hidden" Margin="0,5,0,0">

                    <StackLayout >

                        <Label x:Name ="HA_RightEarLabel" Text="Höger öra:" FontSize="Medium"></Label>

                        <StackLayout Orientation="Horizontal" >
                            <Label x:Name ="HA_RightTimeOptionLabel" Text="Ange som:" FontSize="Medium" Margin="8"></Label>
                            <RadioButton  x:Name="HA_Right_YearsMonth_RadioButton" Content="År och månader" GroupName="Group3" Value="1" FontSize="Medium" CheckedChanged="HA_Right_YearsMonth_RadioButton_CheckedChanged" />
                            <RadioButton  x:Name="HA_Right_Weeks_RadioButton" Content="Veckor" GroupName="Group3" Value="2" FontSize="Medium" CheckedChanged="HA_Right_Weeks_RadioButton_CheckedChanged" />
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">

                            <Picker x:Name="HA_Right_WeeksPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Right_WeeksLabel" Text="veckor" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                            <Picker x:Name="HA_Right_YearsPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Right_YearsLabel" Text="år" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                            <Picker x:Name="HA_Right_MonthsPicker" FontSize="Medium" Margin="5,0,0,0" />
                            <Label x:Name ="HA_Right_MonthsLabel" Text="månader" FontSize="Medium" IsVisible="False" Margin="6"></Label>

                        </StackLayout>

                    </StackLayout>

                </Frame>

            </StackLayout>

        </Grid>


    </StackLayout>

</ContentView>
