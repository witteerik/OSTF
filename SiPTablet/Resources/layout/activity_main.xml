
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout_main">

<!--    linearLayout_test -->
     <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_test"
        android:visibility="gone"
        android:weightSum="9">

<!--          linearLayout_start-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/linearLayout_start"
            android:weightSum="3">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearLayout1"
                android:layout_weight="1"
                android:weightSum="3">


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:text="Starta testet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button_Start"
                    android:layout_weight="1"/>


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>


        <!--linearLayout_message-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/linearLayout_message"
            android:weightSum="3">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/linearLayout1"
                android:layout_weight="1"
                android:weightSum="9">


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:text="This is a message!"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView_Message"
                    android:layout_weight="7"
                    android:textAlignment="center"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>

      
        <!--linearLayout_presentation-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout_presentation"
            android:visibility="gone"
            android:layout_weight="8">

            <!--linearLayout_testWords-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout_testWords"
                android:visibility="gone"
                android:weightSum="9">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:weightSum="9">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Button 1"
                        android:textAllCaps="false"
                        android:fontFamily="Verdana"
                        android:id="@+id/button_response1"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Button 2"
                        android:textAllCaps="false"
                        android:fontFamily="Verdana"
                        android:id="@+id/button_response2"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:weightSum="9">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Button 3"
                        android:textAllCaps="false"
                        android:fontFamily="Verdana"
                        android:id="@+id/button_response3"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>


            <!--linearLayout_circle-->
                       <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/linearLayout_circle"/>


            <!--linearLayout_blank-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/linearLayout_blank">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/space1" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/progressBar_SiP"
            android:layout_weight="1"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_menu"
        android:visibility="gone">

        <Button
            android:text="Step 1. Activate bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuButton1" />
        
         <Button
            android:text="Step 2. Make connectable to PC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BTbutton2" />

         <Button
            android:text="Step 3. Start PC-communication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BTbutton3" />

                 <Button
            android:text="Close PC-connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BTbutton4" />


    </LinearLayout>

</LinearLayout>